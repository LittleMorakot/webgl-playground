{
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["dom", "es6", "es2015", "es5"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "outDir": "build",
    "rootDir": "./",
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "paths": {
      "*": [
        "./types/*"
      ]
  },
  "include": [
    "src/**/*",
    "types"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}